@model List<NhomXingfa.Areas.Quantri.Models.DataModels.Product>
<div class="col-md-1"> </div>
<div class="col-md-10">
    <div class="text-center fontstyle" id="titlespcon" style="line-height:35px;">
        <h2 style="line-height:58px;">
            Thải độc, giảm cân <br />Bổ sung dưỡng chất
        </h2>
    </div>
    <h4 style="line-height:30px">
        <span style="font-weight:bold; font-size:15pt">The VistaHouse</span> chú trọng đến việc chăm sóc sức khỏe và sắc đẹp bằng phương pháp duy trì thói quen ăn uống lành mạnh nhằm đem lại những hiệu quả cho sức khỏe và vóc dáng một cách an toàn và bền vững nhất. Đặt
        <span class="green-o-pages-homepage-desktop-boldw">gói định kỳ</span> để chăm sóc bản thân và nhận những ưu đãi hấp dẫn nhất.
    </h4>
    <div class="text-center">
        <input type="button" class="btn btn-lg btn-info" value="Tư Vấn Gói Định Kỳ" id="btnTuVanDinhKy" />
    </div>
</div>
<div class="col-md-1"> </div>


<div id="listgoidinhky">
    <div class="row">

        @foreach (var q in Model)
        {
            <div class="col-md-3">
                <div class="divtong">
                    <a href="/product/detail/@q.ProductID">
                        <div class="toppin">
                            <img src="~/Photos/Products/@q.Images" />
                            <span class="slchai">
                                <span class="numberchai">@q.SoLuongChai</span><br /> Chai
                            </span>
                        </div>
                        <h4 class="goiname1">
                            @q.ProductName
                        </h4>
                        <h4 class="goiname2">
                            14 Ngày - 4 Chai  / 1 Ngày
                        </h4>
                    </a>
                    <div class="buttondathanggoi">
                        <input type="button" class="btn btn-lg btn-primary btnAddCartGoi" productid="@q.ProductID" value="thêm vào giỏ hàng" />
                    </div>
                    <div class="actionhover">
                        <div class="giagoi">
                            Giá: @String.Format("{0:#,0}", q.PriceSale)<sup>đ</sup>
                        </div>
                        <div class="giaship">
                            Ship: <span>0<sup>đ</sup></span><span class="shipdagiam">@String.Format("{0:#,0}", q.Price)</span><sup>đ</sup>
                        </div>
                        <div class="xemthem">
                            <a href="/product/detail/@q.ProductID">
                                <span>Xem Thêm ></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }



