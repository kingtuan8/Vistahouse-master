@model List<NhomXingfa.Areas.Quantri.Models.DataModels.Product>

<div class="text-center fontstyle" id="titlespcon">
    <h2>
        Thải độc - đẹp da - bổ sung dưỡng chất
    </h2>
</div>

<div class="row" id="goispdon">

    @foreach(var q in Model)
    {
        <div class="col-md-3">
        <a href="javascript:">
            <div class="imggoidon">
                <img src="~/Photos/Products/@q.Images" />
                <img src="~/images/hover.png" class="imghover" />
            </div>

            <div class="namegoidon">
                <div class="namegoidon1">
                    @q.ProductName
                </div>
                <div class="namegoidon2">
                    Protein Tốt Lắm
                </div>
            </div>

            <div class="goidonbutton">
                <input type="button" class="btn btn-lg btn-info btnAddCartDon" productid="@q.ProductID" value="thêm vào giỏ hàng" />
            </div>
            <div class="goidonthetich">
                <div class="thetich1">
                    @String.Format("{0:#,0}", q.PriceSale)<sup>đ</sup> - 350ml
                </div>
                <div class="thetich2">
                    @String.Format("{0:#,0}", q.PriceSale1)<sup>đ</sup> - 500ml
                </div>
                <div class="goidonxemthem">
                    <span>Xem Thêm ></span>
                </div>
            </div>
        </a>
    </div>
    }

    



</div>
