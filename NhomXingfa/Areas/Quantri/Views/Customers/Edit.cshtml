@model NhomXingfa.Areas.Quantri.Models.DataModels.Customer
@using NhomXingfa.Areas.Quantri.Utilities
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Customers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div id="page-heading">
        <ol class="breadcrumb">
            <li><a href="index.html">Trang chủ</a></li>
            <li class="active">Chỉnh sửa KH</li>

        </ol>

        <h1>Sửa</h1>
        <div class="options">

            <div class="btn-toolbar">
                <input type="submit" value="Lưu" class="btn btn-success" />
                <a href="/Customers/Index" class="btn btn-primary">Quay Lại</a>
            </div>
        </div>
    </div>
    <div class="container" style="background-color:#ffffff">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.CustomerID)
        @Html.HiddenFor(model => model.CustomerImage)

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.CustomerName, "Tên KH", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CustomerImage, "Logo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    <input type="file" id="HinhAnh" name="HinhAnh" />
                    @Html.ValidationMessageFor(model => model.CustomerImage, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    <img src="@WebConstants.imgLogoCustShow/@Model.CustomerImage" style="height:80px" />
                    @Html.ValidationMessageFor(model => model.CustomerImage, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CustomerContent, "Mô tả ngắn", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    <textarea id="CustomerContent" name="CustomerContent" rows="4" class="form-control">@Model.CustomerContent</textarea>

                    @Html.ValidationMessageFor(model => model.CustomerContent, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsActive, "Ẩn/Hiện", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    <div class="checkbox">
                        <select class="form-control" id="IsActive" name="IsActive">
                            <option selected value="true">Hiện thị</option>
                            <option value="false">Ẩn</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
    </div>
}
