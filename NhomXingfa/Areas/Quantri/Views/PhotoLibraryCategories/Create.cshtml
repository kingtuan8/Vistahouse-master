@model NhomXingfa.Areas.Quantri.Models.DataModels.PhotoLibraryCategory

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Quantri/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<div id="page-heading">
    <ol class="breadcrumb">
        <li><a href="index.html">Trang chủ</a></li>
        <li class="active">Thêm mới Danh mục Ảnh</li>

    </ol>

    <h1>Thêm mới</h1>
    <div class="options">

        <div class="btn-toolbar">
            <input type="submit" value="Lưu mới" class="btn btn-success" />
            <a href="/Quantri/PhotoLibraryCategories/Index" class="btn btn-primary">Quay Lại</a>
        </div>
    </div>
</div>
<div class="container" style="background-color:#ffffff">
    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.LibraryName, "Tên Danh Mục", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LibraryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LibraryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LibraryDesc, "Mô Tả", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea id="LibraryDesc" name="LibraryDesc" class="form-control" rows="5"></textarea>
                @Html.ValidationMessageFor(model => model.LibraryDesc, "", new { @class = "text-danger" })
            </div>
        </div>

       
    </div>
</div>
}

