@model NhomXingfa.Areas.Quantri.Models.DataModels.CustomerFeedback
@using NhomXingfa.Areas.Quantri.Utilities
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Quantri/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "CustomerFeedbacks", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div id="page-heading">
        <ol class="breadcrumb">
            <li><a href="index.html">Trang chủ</a></li>
            <li class="active">Chỉnh sửa Phản hồi KH</li>

        </ol>

        <h1>Chỉnh sửa</h1>
        <div class="options">

            <div class="btn-toolbar">
                <input type="submit" value="Lưu" class="btn btn-success" />
                <a href="/Quantri/CustomerFeedbacks/Index" class="btn btn-primary">Quay Lại</a>
            </div>
        </div>
    </div>
    <div class="container" style="background-color:#ffffff">
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.CustomerImage)
            @Html.HiddenFor(model => model.Created)

            <div class="form-group">
                @Html.LabelFor(model => model.CustomerName, "Tên Khách Hàng", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CustomerImage, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    <input type="file" id="HinhAnh" name="HinhAnh" />
                    @Html.ValidationMessageFor(model => model.CustomerImage, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <img src="@WebConstants.imgCusFeedbackShow/@Model.CustomerImage" style="height:100px" />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CustomerInfo, "Thông tin KH", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CustomerInfo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomerInfo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Feedback, "Phản hồi KH", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <textarea id="Feedback" name="Feedback" class="form-control" rows="5">@Model.Feedback</textarea>
                    @Html.ValidationMessageFor(model => model.Feedback, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ThuTu, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.ThuTu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ThuTu, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    <div class="checkbox">
                        <select class="form-control" id="IsActive" name="IsActive">
                            @if (Model.IsActive == true)
                            {
                                <option selected value="true">Hiện thị</option>
                                <option value="false">Ẩn</option>
                            }
                            else
                            {
                                <option value="true">Hiện thị</option>
                                <option selected value="false">Ẩn</option>
                            }

                        </select>
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
    </div>
}

