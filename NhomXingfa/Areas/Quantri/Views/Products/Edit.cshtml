                $("#PriceSale1").val(PriceSale1);
            });

            $("#PricePhanTram1").focusout(function () {
                var Price1 = $("#Price1").val();
                var PricePhanTram1 = $("#PricePhanTram1").val();
                var PriceSale1 = 0;
                if (PricePhanTram1 > 0) {
                    PriceSale1 = Price1 - (Price1 * PricePhanTram1 / 100)
                }
                else {
                    PriceSale1 = Price1;
                }
                $("#PriceSale1").val(PriceSale1);
            });

        });
    </script>
}
